html
    head
        title= 'Twistly'
        style.
            body {
                margin: 0;
                background-color: #333;
                color: white;
                font-family: sans-serif;
                text-transform: uppercase;
            }
            
            #holder {
                position: relative;
                top: 50%;
                transform: translateY(-50%);
                text-align: center;
            }
            
            a {
                color: #428bca;
                text-decoration: none;
            }
            
            a:hover {
                text-decoration: underline;
            }
            
            h1 {
                margin: 0;
                font-size: 70px;
            }
            
            #footer {
                position: fixed;
                bottom: 5;
                left: 0;
                right: 0;
                text-align: center;
                font-size: 14px;
            }
    body
        #holder
            h1 Twistly
            a(href="/signin") Signin
            | 
            | |
            | 
            a(href="/signup") Signup
        #footer
            | #{postsQueued} posts queued | #{users} queueing
