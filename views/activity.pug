extends ./layout

block styles
    style.
        .form-horizontal.style-form .form-group:last-of-type {
            border: none;
            padding-bottom: 0;
            margin-bottom: 0;
        }

block content
    .row.mt
        .col-lg-12
            - for(i in postSets)
                - var postSet = postSets[i];
                    .panel.panel-default
                        .panel-body
                            - var timeStamp = new Date(postSet._id.getTimestamp().toString()).toISOString();
                            | #{postSet.blogId.url} reblogged #{postSet.postCount.start} from #{postSet.queuedFrom || 'Unknown'}
                            | 
                            time(datetime=timeStamp) #{timeStamp}
                            | 
                            | -
                            | 
                            | There's #{postSet.postCount.now}
                            | 
                            | posts left to post.
